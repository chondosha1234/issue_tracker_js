<%- include('partials/base'); %>

<link rel="stylesheet" href="/stylesheets/main.css"/>

<div class="body-container">
  <div class="main-container">

    <div class="home-info">
      <h3>Username: <%= user.username %></h3>
      <% if (user.assigned_issue) { %>
      <p class="home-issue-info">Issue ID: <%= user.assigned_issue %></p>
      <% } else { %>
      <p class="home-issue-info">No Issue Assigned Right Now!</p>
      <% } %>

      <br>
      <p class="home-user-info">Your Email: <%= user.email %></p>
      <p class="home-user-info">Your Role: <%= user.person_role %></p>
      <p class="home-user-info">User Created: <%= user.created_on.toISOString().slice(0, 10).replace('T', ' ') %></p>
      <p class="home-user-info">Last Modified on: <%= user.modified_on.toISOString().slice(0, 10).replace('T', ' ') %></p>
    </div>

    <br>

    <div class="home-actions">
      <button class="create-btn">
        <a class="create-link" href="/home/projects/create_project">Create Project</a>
      </button>
      <button class="create-btn">
        <a class="create-link" href="/home/issues/create_issue">Create Issue</a>
      </button>
      <button class="create-btn">
        <a class="create-link" href="/home/update_issue">Update Current Issue</a>
      </button>
      <% if (user.person_role == "Admin") { %>
      <button class="create-btn">
        <a class="create-link" href="/home/issue/assign_issue">Assign Issue</a>
      </button>
      <button class="create-btn">
        <a class="create-link" href="/home/issue/close_issue">Close Issue</a>
      </button>
      <button class="create-btn">
        <a class="create-link" href="/home/project/finish_project">Finish Project</a>
      </button>
      <% } %>
    </div>
  </div>

  <%- include("partials/sidebar"); %>

</div>
